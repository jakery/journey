{
    "extends": "airbnb",
    "plugins": [
        "standard",
        "promise"
    ],
    // Temporarily downgrade some rules to warnings, and some rules to nothing.
    // Enforcing these rules requires code refactoring and/or retesting.
    "rules": {
        "eqeqeq": 1,
        "no-extend-native": 1,
        "new-cap": 1,
        "no-continue": 1,
        "no-unused-vars": 1,
        "arrow-body-style": 1,
        "prefer-spread": 1,
        "consistent-return": 1,
        "no-mixed-operators": 0,
        "max-len": 0,
        "brace-style": 0
    },
    "globals": {
        // TODO: Most of these will no longer be global after the refactor.
        "document": false,
        "window": false,
        "jQuery": false,
        "$j": false,
        "$": false,
        "tileCodes": true,
        "SpriteNS": true,
        "randomMessages": true,
        "loadMap": true,
        "alert": false,
        "CanvasRenderingContext2D": false,
        "game": true,
        "ctx": true,
        "player": true,
        "drawTileOffset": true,
        "stage": true,
        "Coordinates": false,
        // Keyboard.js
        "keyIsDown": false,
        "keyIsRegistered": false,
        "alphanumericTX": false,
        "keyHeldDuration": false,
        "alphanumeric": false,
        // ObscurelyNamedFile.js
        "enteredPassword": true,
        "processPassword": true,
        "konamiCode": true
    }
}
{
    "extends": "airbnb",
    "plugins": [
        "standard",
        "promise"
    ],
    // Temporarily: Downgrade some rules to warnings.
    "rules": {
        "no-extend-native": 1,
        "new-cap": 1,
        "no-mixed-operators": 1,
        "max-len": 1,
        "no-continue": 1,
        "no-unused-vars": 1,
        "arrow-body-style": 1,
        "prefer-spread": 1
    },
    "globals": {
        "document": false,
        "window": false,
        "jQuery": false,
        "$j": false,
        "$": false,
        "tileCodes": true,
        "SpriteNS": true,
        "randomMessages": true,
        "loadMap": true,
        "alert": false,
        "CanvasRenderingContext2D": false
    }
}
{
    "extends": "airbnb",
    "plugins": [
        "standard",
        "promise"
    ],
    // Temporarily downgrade some rules to warnings, and some rules to nothing.
    // Enforcing these rules requires code refactoring and/or retesting.
    "rules": {
        "no-param-reassign": 1,
        "no-extend-native": 1,
        "new-cap": 1,
        "no-continue": 1,
        "no-unused-vars": 1,
        "arrow-body-style": 1,
        "prefer-spread": 1,
        "consistent-return": 1,
        "prefer-rest-params": 1,
        "no-mixed-operators": 0,
        "max-len": 0,
        "brace-style": 0,
        "func-names": 0
    },
    "globals": {
        "define": false,
        "window": false,
        "document": false,
        "Modernizr": false
    }
}
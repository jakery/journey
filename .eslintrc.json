{
    "extends": "airbnb",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
        "no-magic-numbers": 0,
        "linebreak-style": 0
    },
    "globals": {
        "define": false,
        "window": false,
        "document": false,
        "Modernizr": false,
        "describe": false,
        "assert": false,
        "expect": false,
        "it": false,
        "beforeEach": false
    }
}
{
    "extends": "airbnb",
    "plugins": [
        "standard",
        "promise"
    ],
    "rules": {
        "no-magic-numbers": [
            1,
            {
                "ignore": [
                    0,
                    1
                ]
            }
        ],
        "max-len": [
            "error",
            {
                "code": 150
            }
        ],
        "linebreak-style": 0,
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline",
                "functions": "ignore"
            }
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ]
    },
    "globals": {
        "define": false,
        "window": false,
        "document": false,
        "Modernizr": false,
        "describe": false,
        "assert": false,
        "expect": false,
        "it": false,
        "beforeEach": false
    }
}